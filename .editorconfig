root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4

[*.neon]
indent_style = tab
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[.phive/trust-gpg-keys.txt]
insert_final_newline = false
